mqtt:
  enabled: true
  host: "{{ mqtt_host }}"
  user: "{{ mqtt_user}}"
  password: "{{ mqtt_password }}"

ui:
  time_format: 24hour

detectors:
  coral:
    type: edgetpu
    device: pci

detect:
  enabled: true
  fps: 10

# model:
#   path: /config/mobilenet_v2/1.tflite
#   labelmap_path: /config/mobilenet_v2/imagenet_labels.txt
#   width: 224
#   height: 224

objects:
  track:
    - person
    - cat
    - bird
    - dog
    - car

record:
  enabled: true
  retain:
    days: 2
    mode: active_objects
  # events:
  #   retain:
  #     default: 10
  #     mode: motion

birdseye:
  enabled: true
  mode: continuous
  width: 2560
  height: 1440
  quality: 1

snapshots:
  enabled: true
  bounding_box: true

go2rtc:
  streams:
    cam1:
      - rtsp://192.168.1.101:554/live0.264
    cam2:
      - rtsp://192.168.1.102:554/live0.264
    cam3:
      - rtsp://192.168.1.103:554/live0.264
    cam4:
      - rtsp://192.168.1.104:554/live0.264

# Optional: jsmpeg stream configuration for WebUI
